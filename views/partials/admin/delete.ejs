<form action="/admin/deleteRestaurant" method="POST">
    <div class="form-group" id="deleteForm">
        <select class="form-control" id="deleteListNames" name="id" required>
            <option value="" disabled selected hidden>Select restaurant</option>
        </select>
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" id="deletename" name="name" placeholder="Name" required>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input class="form-control" id="deleteaddress" name="address" placeholder="Address" required>
    </div>
    <div class="form-group">
        <label for="street_number">Street number</label>
        <input class="form-control" id="deletestreet_number" name="street_number" placeholder="Street number" required>
    </div>
    <div class="form-group">
        <label for="zipcode">Zip code</label>
        <input class="form-control" id="deletezipcode" name="zipcode" placeholder="Zipcode" required>
    </div>
    <div class="form-group">
        <label for="borough">Borough</label>
        <input class="form-control" id="deleteborough" name="borough" placeholder="Borough" required>
    </div>
    <div class="form-group">
        <label for="cuisine">Cuisine</label>
        <select class="form-control" id="deletecuisine" name="cuisine" required>
            <option value="" disabled selected hidden>Cuisine</option>
            <option value="Bakery">Bakery</option>
            <option value="Café">Café</option>
            <option value="Chicken">Chicken</option>
            <option value="Chinese">Chinese</option>
            <option value="Delicatessen">Delicatessen</option>
            <option value="Donuts">Donuts</option>
            <option value="Greek">Greek</option>
            <option value="Hamburgers">Hamburgers</option>
            <option value="Ice Cream">Ice Cream</option>
            <option value="Indian">Indian</option>
            <option value="Italian">Italian</option>
            <option value="Japanese">Japanese</option>
            <option value="Korean">Korean</option>
            <option value="Mexican">Mexican</option>
            <option value="Pizza">Pizza</option>
            <option value="Seafood">Seafood</option>
            <option value="Spanish">Spanish</option>
            <option value="Steak">Steak</option>
            <option value="Thai">Thai</option>
            <option value="Turkish">Turkish</option>
            <option value="Vegetarian">Vegetarian</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
</form>