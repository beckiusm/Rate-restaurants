<div id="reviews" class="mt-3">
    <% for (let i=0; i<restaurant.length; i++) { 
        if (restaurant[i].text) { %>
    <div class="review border rounded-sm pt-1 px-2 pb-3 mb-3">
        <div class="rateit" data-rateit-value="<%= restaurant[i].score %>" data-rateit-ispreset="true"
            data-rateit-readonly="true"></div>
        <p><%= restaurant[i].text %></p>
    </div>
    <% }} %>
</div>

<form action="/addReview" method="POST">
    <select name="score" id="rateSelect" data-rateit-valuesrc="value" required>
        <option value="" selected></option>
        <option value="1"></option>
        <option value="2"></option>
        <option value="3"></option>
        <option value="4"></option>
        <option value="5"></option>
    </select>
    <div id="rateRestaurant" class="rateit" data-rateit-resetable="false" data-rateit-mode="font"
        data-rateit-backingfld="#rateSelect"></div>
    <div class="form-group">
        <textarea class="form-control" id="review" name="review" rows="5" placeholder="Write a review..."
            required></textarea>
    </div>
    <input id="id" name="id" value="<%= restaurant[0].id %>" type="number" class="d-none">

    <button class="btn btn-primary" type="submit">Submit</button>
</form>